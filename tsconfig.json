{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // try this
    "target": "es2016",
    "lib": [
      "es2017",
      "dom",
      "scripthost"
    ],
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}